{
    "name": "darthsoup/laravel-whmcs",
    "description": "Laravel WHMCS API interface",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Krummnacker",
            "email": "kevin.krummnacker@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2.5|^8.0",
        "ext-json": "*",
        "illuminate/support": "~6.0|~7.0|~8.0",
        "illuminate/session": "~6.0|~7.0|~8.0",
        "illuminate/events": "~6.0|~7.0|~8.0",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.0",
        "http-interop/http-factory-guzzle": "^1.0",
        "mockery/mockery": "~1.3",
        "orchestra/testbench": "5.x",
        "phpunit/phpunit": "^8.5.8|^9.3.3"
    },
    "autoload": {
        "psr-4": {
            "DarthSoup\\Whmcs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DarthSoup\\Tests\\Whmcs\\": "tests/"
        }
    },
    "suggest": {
        "guzzlehttp/guzzle" : "A PSR-18 compatible HTTP Client (^7.0)",
        "http-interop/http-factory-guzzle" : "PSR-17 compatible HTTP Factories (^1.0)"
    },
    "extra": {
        "laravel": {
            "providers": [
                "DarthSoup\\Whmcs\\WhmcsServiceProvider"
            ],
            "aliases": {
                "Whmcs": "DarthSoup\\Whmcs\\Facades\\Whmcs"
            }
        }
    }
}
